+b.SECTION.price.section
  .container
    .row
      .col-12
        h2.section__title Выберите  своё
          |
          br
          | Apple устройство
        +e.list
          nav
            #nav-tab.nav.nav-pills(role="tablist")
              button#nav-01-tab.nav-link.active(data-bs-toggle="pill" data-bs-target="#nav-01" type="button" role="tab" aria-controls="nav-macbookair" aria-selected="true")
                span.nav-img
                  img(src="img/device/macbookair.png" srcset="img/device/macbookair@2x.png 2x, img/device/macbookair@3x.png 3x" alt="macbook air")
                span MacBook Air
              button#nav-02-tab.nav-link(data-bs-toggle="pill" data-bs-target="#nav-02" type="button" role="tab" aria-controls="nav-macbookpro" aria-selected="false")
                span.nav-img
                  img(src="img/device/macbookpro.png" srcset="img/device/macbookpro@2x.png 2x, img/device/macbookpro@3x.png 3x" alt="macbook pro")
                span MacBook Pro
              button#nav-03-tab.nav-link(data-bs-toggle="pill" data-bs-target="#nav-03" type="button" role="tab" aria-controls="nav-imac" aria-selected="false")
                span.nav-img
                  img(src="img/device/imac.png" srcset="img/device/imac@2x.png 2x, img/device/imac@3x.png 3x" alt="imac")
                span iMac
              button#nav-04-tab.nav-link(data-bs-toggle="pill" data-bs-target="#nav-04" type="button" role="tab" aria-controls="nav-macmini" aria-selected="false")
                span.nav-img
                  img(src="img/device/macmini.png" srcset="img/device/macmini@2x.png 2x, img/device/macmini@3x.png 3x" alt="mac mini")
                span Mac mini
          #nav-tabContent.tab-content
            #nav-01.tab-pane.fade.show.active(role="tabpanel" aria-labelledby="nav-macbookair")
              .row
                .col-12.col-md-10.offset-md-1
                  +e.H3.subtitle Стоимость работ по ремонту Macbook Air
                  .table-responsive
                    +e.TABLE.table.table
                      tbody
                        tr
                          +e.TD.table-title Чистка от пыли/Замена термопасты
                          +e.TD.table-cost от 600 руб.
                          +e.TD.table-time от 40 минут
                        tr
                          +e.TD.table-title Замена аккумулятора
                          +e.TD.table-cost 3400 руб.
                          +e.TD.table-time от 40 минут
                        tr
                          +e.TD.table-title Замена матрицы
                          +e.TD.table-cost 4200 руб.
                          +e.TD.table-time от 40 минут
                        tr
                          +e.TD.table-title Ремонт после попадания влаги
